<form action="/pirates" method="POST">
  <h2>Pirate's Name: <input type="text" name="pirate[name]"></h2>
  <h2>Pirate's Weight: <input type="text" name="pirate[weight]"></h2>
  <h2>Pirate's Height: <input type="text" name="pirate[height]"></h2>
  
  <h2>First Ship's Name: <input id="ship_name_1" type="text" name="pirate[ships][][name]"></h2>
  <h2>First Ship's Type: <input id="ship_type_1" type="text" name="pirate[ships][][type]"></h2>
  <h2>First Ship's Booty: <input id="ship_booty_1" type="text" name="pirate[ships][][booty]"></h2>
  
  <h2>Second Ship's Name: <input id="ship_name_2" type="text" name="pirate[ships][][name]"></h2>
  <h2>Second Ship's Type: <input id="ship_type_2" type="text" name="pirate[ships][][type]"></h2>
  <h2>Second Ship's Booty: <input id="ship_booty_2" type="text" name="pirate[ships][][booty]"></h2>
  
  <input type="submit" value="Submit">
</form>
